{
    "variables": {
      "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
      "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
    },
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-2",
        "source_ami": "ami-0a63f96e85105c6d3",
        "instance_type": "t2.micro",
        "ssh_username": "linux",
        "ami_name": "Appdynamics-ami"
      }
    ],
    "provisioners": [
      
      {
          "type": "shell",
          "script": "./appdynamics.sh"
      }
  ]
  }